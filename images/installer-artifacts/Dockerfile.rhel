# This Dockerfile builds an image containing Mac and Linux/AMD64 versions of
# the installer layered on top of the cluster-native Linux installer image.

FROM registry.ci.openshift.org/ocp/builder:rhel-8-golang-1.18-openshift-4.12 AS builder
ARG TAGS=""
WORKDIR /go/src/github.com/openshift/installer
COPY . .
RUN GOOS=darwin GOARCH=amd64 DEFAULT_ARCH="$(go env GOHOSTARCH)" \
    OUTPUT=_output/bin/darwin_amd64/openshift-install hack/build.sh
RUN GOOS=darwin GOARCH=arm64 DEFAULT_ARCH="$(go env GOHOSTARCH)" \
    OUTPUT=_output/bin/darwin_arm64/openshift-install hack/build.sh
RUN GOOS=linux GOARCH=amd64 DEFAULT_ARCH="$(go env GOHOSTARCH)" \
    OUTPUT=_output/bin/linux_amd64/openshift-install hack/build.sh
RUN GOOS=linux GOARCH=arm64 DEFAULT_ARCH="$(go env GOHOSTARCH)" \
    OUTPUT=_output/bin/linux_arm64/openshift-install hack/build.sh

FROM registry.ci.openshift.org/ocp/4.12:installer
COPY --from=builder /go/src/github.com/openshift/installer/_output/bin/darwin_amd64/openshift-install /usr/share/openshift/mac/openshift-install
COPY --from=builder /go/src/github.com/openshift/installer/_output/bin/darwin_arm64/openshift-install /usr/share/openshift/mac_arm64/openshift-install
COPY --from=builder /go/src/github.com/openshift/installer/_output/bin/linux_amd64/openshift-install /usr/share/openshift/linux_amd64/openshift-install
COPY --from=builder /go/src/github.com/openshift/installer/_output/bin/linux_arm64/openshift-install /usr/share/openshift/linux_arm64/openshift-install
