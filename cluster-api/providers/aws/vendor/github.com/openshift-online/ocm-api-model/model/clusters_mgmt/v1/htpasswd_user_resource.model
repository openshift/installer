// Manages a specific _HTPasswd_ user.
resource HTPasswdUser {
	// Retrieves the details of the user.
	method Get {
		out Body HTPasswdUser
	}

	// Deletes the user.
	method Delete {
	}

    // Updates the user's password. The username is not editable
	method Update {
	    in out Body HTPasswdUser
	}
}