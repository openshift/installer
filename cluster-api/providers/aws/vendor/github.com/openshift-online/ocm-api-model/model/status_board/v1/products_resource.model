// Manages the collection of products.
resource Products {
  // Retrieves the list of products.
  method List {
    in out Page Integer = 1
    in out Size Integer = 100
    in OrderBy String
    in Search String
    out Total Integer
    out Items []Product
  }

  method Add {
    in out Body Product
  }

  locator Product {
    target Product
    variable ID
  }
}
